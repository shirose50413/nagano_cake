<h3>会員一覧</h3>
<table>
  <thead>
    <td>
      会員ID
    </td>
    <td>
      氏名
    </td>
    <td>
      メールアドレス
    </td>
    <td>
      ステータス
    </td>
  </thead>
  <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id%>
      </td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name%><%= customer.first_name%>
        <% end %>
      </td>
      <td>
        <%= customer.email %>
      </td>
      <td>
        <%= customer.is_deleted ? '退会' : '有効' %>>
      </td>
    </tr>
  <% end %>
</table>
<%= paginate @customers %>
