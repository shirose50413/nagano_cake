<div class="container">
  <div class="row">
    <div class="mx-auto col-10 pt-4 mb-5">
      <span class="h4 bg-light"><strong>商品詳細</strong></span>
    </div>
    <div class="col-4 text-center">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-8">
      <table>
        <tr height="40">
          <td width="120">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr height="40">
          <td width="30%">商品説明</td>
          <td width="300"><%= @item.introduction %></td>
        </tr>
        <tr height="40">
          <td width="30%">
            税込価格<br>（税抜価格）
          </td>
          <td><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
        </tr>
        <tr height="40">
          <td width="30%">販売ステータス</td>
          <% if @item.is_sold_out == false %>
            <td class="text-success">
          <% else %>
            <td class="text-secondary">
          <% end %>
            <strong><%= @item.is_sold_out ? '販売停止中' : '販売中' %></strong>
          </td>
        </tr>

      </table>
    </div>
    <div class="col-12 text-center">
      <%= link_to edit_admin_item_path , class: "btn btn-success" do %>
        編集する
      <% end %>
    </div>
  </div>
</div>