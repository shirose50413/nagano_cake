<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border">
      <nav class="navbar navbar-expand-ld">
        <div class="container">
          <%= link_to root_path, class: "navbar-brand" do %>
            ながのCAKE
          <% end %>
          <% if customer_signed_in? %>
            <span>ようこそ、<%= current_customer.last_name %>さん！</span>
          <% end %>
          <div class="float-right">
            <ul class="navbar-nav ml-auto list-group-horizontal">
              <% if admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path, class: 'btn btn-outline-secondary mx-2' do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path, class: 'btn btn-outline-secondary mx-2' do %>
                    会員一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_root_path, class: 'btn btn-outline-secondary mx-2' do %>
                    注文履歴一覧
                  <% end %>
                </li>
                <!--<li>-->
                  <!--%= link_to about_path, class: 'btn btn-outline-secondary mx-2' do %-->
                    <!--ジャンル一覧-->
                  <!--% end %-->
                <!--</li>-->
                <li>
                  <%= link_to destroy_admin_session_path, class: 'btn btn-outline-secondary mx-2 ' , method: :delete do %>
                    ログアウト
                  <% end %>
                </li>
              <% elsif customer_signed_in? %>
                <li>
                  <%= link_to customers_path, class: 'btn btn-outline-secondary mx-3' do %>
                    マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class: 'btn btn-outline-secondary mx-3 ' do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to cart_items_path, class: 'btn btn-outline-secondary mx-3' do %>
                    カート
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, class: 'btn btn-outline-secondary mx-3' , method: :delete do %>
                    ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to about_path, class: 'btn btn-outline-secondary mx-3' do %>
                    About
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class: 'btn btn-outline-secondary mx-3' do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class: 'btn btn-outline-secondary mx-3' do %>
                    新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path, class: 'btn btn-outline-secondary mx-3' do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>
    <%= yield %>
    <footer class="border mt-2"></footer>
  </body>
</html>
