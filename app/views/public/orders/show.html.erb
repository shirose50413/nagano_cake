<div class="container">
  <div class="row">
    <div class="mx-auto col-10 pt-4">
      <span class="h4 bg-light"><strong>注文履歴詳細</strong></span>
    </div>
    <div class="mx-auto col-7 pb-1">
      <span class="h5"><strong>注文情報</strong></span>
    </div>
    <div class="mx-auto col-5 pb-1">
      <span class="h5"><strong>請求情報</strong></span>
    </div>
    <div class="mx-auto col-7 pb-2">
      <table class="table align-middle">
        <tr>
          <th class="table-light">注文日</th>
          <td><%= @order.created_at.to_s(:date_jp) %></td>
        </tr>
        <tr>
          <th class="table-light">配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-light">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="table-light">ステータス</th>
          <td><%= @order.state %></td>
        </tr>
      </table>
    </div>
    <div class="mx-auto col-5">
      <table class="table align-middle">
        <tr>
          <th class="table-light">商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-light">配送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-light">ご請求額</th>
          <td><%= @payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
    <div class="col-8">
      <span class="h5"><strong>注文内容</strong></span>
    </div>
    <div class="col-8">
      <table class="table align-middle">
        <thead class="table-light">
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.item.add_tax_price %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
