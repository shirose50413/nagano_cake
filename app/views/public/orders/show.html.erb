<h3>注文履歴詳細</h3>
<table>
  <caption>注文情報</caption>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postal_code %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.state %></td>
  </tr>
</table>
<table>
  <caption>請求情報</caption>
  <tr>
    <th>商品合計</th>
    <td><%= @total.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @order.postage.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @payment.to_s(:delimited) %></td>
  </tr>
</table>
<table>
  <caption>注文内容</caption>
  <thead>
    <td>商品</td>
    <td>単価（税込）</td>
    <td>個数</td>
    <td>小計</td>
  </thead>
  <tbody>
    <% @order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.item.add_tax_price %></td>
        <td><%= order_item.amount %></td>
        <td><%= order_item.subtotal.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
